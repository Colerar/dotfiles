#!/usr/bin/env zsh

# Configure follows: https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)
# Espcially 'Configure scripting addition' section
# to ensure sudo priviledge for yabai
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config                                 \
    window_shadow                float          \
    window_animation_duration    0.0            \
